{
  "name": "jest-acceptance",
  "version": "0.0.2",
  "main": "dist/vue-tester",
  "description": "A strategy for getting close to user acceptance quality testing, without the overhead of full browser automation.",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project tsconfig.json lib/**/*.ts",
    "test": "jest",
    "build": "tsc",
    "clean": "rm -rf ./dist"
  },
  "keywords": [
    "vue",
    "testing",
    "acceptance testing",
    "integration testing",
    "diff",
    "jest"
  ],
  "author": "Jonathan Johnson <me@jondavidjohn.com> (https://jondavidjohn.com/)",
  "dependencies": {
    "jest-serializer-vue": "^2.0.2",
    "snapshot-diff-serializer": "^1.0.0",
    "vue-template-compiler": "^2.5.16"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "@vue/test-utils": "^1.0.0-beta.20",
    "jest": "^23.2.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.1.0",
    "typescript": "^2.9.2",
    "vue": "^2.5.16",
    "vue-jest": "^2.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!lib/**/*.d.ts"
    ],
    "snapshotSerializers": [
      "./lib/serializer.ts"
    ]
  }
}
