{
  "name": "vue-acceptance",
  "version": "0.0.1",
  "main": "dist",
  "description": "",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "clean": "rm -rf ./dist"
  },
  "keywords": [
    "vue",
    "testing",
    "acceptance testing",
    "integration testing",
    "diff"
  ],
  "author": "Jonathan Johnson <me@jondavidjohn.com> (https://jondavidjohn.com/)",
  "dependencies": {
    "jest-serializer-vue": "^2.0.2",
    "snapshot-diff-serializer": "^1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.1.4",
    "jest": "^23.2.0",
    "ts-jest": "^23.0.0",
    "typescript": "^2.9.2"
  },
  "peerDependencies": {
    "@vue/test-utils": "^1.0.0-beta.20"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
